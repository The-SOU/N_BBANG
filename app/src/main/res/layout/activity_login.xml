<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="activity"
            type="com.theone.n_bbang.view.LoginActivity" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/o5"
        tools:context=".view.LoginActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_input_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingBottom="30dp"
            android:elevation="7dp"
            android:background="@drawable/radius_base"
            android:visibility="visible"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/radius_top_base"

                android:backgroundTint="@color/colorCardHeader"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/notosans_kr_bold"
                    android:includeFontPadding="false"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:text="아이디"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/default_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/layout_header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosans_kr_medium"
                android:includeFontPadding="false"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="로그인"/>

            <TextView
                android:id="@+id/default_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/default_login"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosans_kr_regular"
                android:includeFontPadding="false"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:text="아이디를 입력해주세요."/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_et_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/default_id"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/border_primary_radius">

                <EditText
                    android:id="@+id/et_search_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:hint="아이디"
                    android:background="@null"
                    android:includeFontPadding="false"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/btn_find_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/layout_et_id"
                app:layout_constraintStart_toStartOf="@+id/layout_et_id"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosans_kr_medium"
                android:includeFontPadding="false"
                android:textSize="13sp"
                android:textColor="@color/colorPrimaryVer2"
                android:text="아이디를 잊으셨나요?"/>

            <TextView
                android:id="@+id/btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/btn_find_id"
                app:layout_constraintEnd_toEndOf="@+id/layout_et_id"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:background="@drawable/radius_primary"
                android:backgroundTint="@color/colorPrimaryVer2"
                android:fontFamily="@font/notosans_kr_medium"
                android:includeFontPadding="false"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:text="다음"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_input_pw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingBottom="30dp"
            android:elevation="7dp"
            android:background="@drawable/radius_base"
            android:visibility="gone"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_header_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/radius_top_base"
                android:backgroundTint="@color/colorCardHeader"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/notosans_kr_bold"
                    android:includeFontPadding="false"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:text="비밀번호"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/default_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/layout_header_pw"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosans_kr_regular"
                android:includeFontPadding="false"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:text="비밀번호를 입력해주세요."/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_et_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/default_pw"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/border_primary_radius">

                <EditText
                    android:id="@+id/et_input_pw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:hint="비밀번호"
                    android:background="@null"
                    android:includeFontPadding="false"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <CheckBox
                android:id="@+id/checkbox_secret_pw"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:layout_constraintTop_toBottomOf="@id/layout_et_pw"
                app:layout_constraintStart_toStartOf="@id/layout_et_pw"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/default_secret_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/checkbox_secret_pw"
                app:layout_constraintBottom_toBottomOf="@id/checkbox_secret_pw"
                app:layout_constraintStart_toEndOf="@id/checkbox_secret_pw"
                android:layout_marginStart="10dp"
                android:paddingBottom="2dp"
                android:fontFamily="@font/notosans_kr_regular"
                android:includeFontPadding="false"
                android:textSize="11sp"
                android:textColor="@color/black"
                android:text="비밀번호 표시"/>


            <TextView
                android:id="@+id/btn_find_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/checkbox_secret_pw"
                app:layout_constraintStart_toStartOf="@+id/layout_et_pw"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/notosans_kr_medium"
                android:includeFontPadding="false"
                android:textSize="13sp"
                android:textColor="@color/colorPrimaryVer2"
                android:text="비밀번호를 잊으셨나요?"/>

            <TextView
                android:id="@+id/btn_ok_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/btn_find_pw"
                app:layout_constraintEnd_toEndOf="@+id/layout_et_pw"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:background="@drawable/radius_primary"
                android:backgroundTint="@color/colorPrimaryVer2"
                android:fontFamily="@font/notosans_kr_medium"
                android:includeFontPadding="false"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:text="다음"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_result_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layout_input_pw"
            app:layout_constraintStart_toStartOf="@id/layout_input_pw"
            app:layout_constraintEnd_toEndOf="@id/layout_input_pw"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_primary_circle"
            android:visibility="gone"
            >

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/border_alpha_half_circle"/>

            <TextView
                android:id="@+id/tv_result_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingTop="10dp"
                android:paddingBottom="12dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:fontFamily="@font/notosans_kr_regular"
                android:includeFontPadding="false"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:text="올바른 비밀번호가 아닙니다."/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_result_msg_Ver2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layout_result_msg"
            app:layout_constraintStart_toStartOf="@id/layout_input_pw"
            app:layout_constraintEnd_toEndOf="@id/layout_input_pw"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_primary_circle"
            android:visibility="gone"
            >

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/border_alpha_half_circle"
                android:backgroundTint="@color/colorCardHeader"/>

            <TextView
                android:id="@+id/tv_result_msg_ver2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingTop="10dp"
                android:paddingBottom="12dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:fontFamily="@font/notosans_kr_regular"
                android:includeFontPadding="false"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:text="올바른 비밀번호가 아닙니다."/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layout_input_id"
            app:layout_constraintStart_toStartOf="@id/layout_input_id"
            android:layout_marginTop="20dp"
            android:background="@drawable/radius_base_10"
            android:elevation="7dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:fontFamily="@font/notosans_kr_medium"
                android:includeFontPadding="false"
                android:textSize="13sp"
                android:textColor="@color/colorPrimaryVer2"
                android:text="회원가입"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>

